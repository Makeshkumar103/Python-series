
row = 5
for i in range(1, row + 1):
    print(' ' * (row - i) + '* ' * (2 * i - 1 ))

rows = 5
for i in range(rows, 0, -1):
    print(' ' * (rows - i) + '* ' * (2 * i - 1 ))
print('------------------------')
#upper half
rows = 5
for i in range(1, rows + 1):
    print(' ' * (rows - i) + '* ' * (2 * i - 1 ))
#lower half
for i in range(rows, 0, -1):
    print(' ' * (rows - i) + '* ' * (2 * i - 1 ))
print('------------------------')